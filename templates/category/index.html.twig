{% block javascripts %}

<script>
    let searchInput = document.getElementById('searchField');
    searchInput.addEventListener("keypress", function(el) {
        if ( el.target.value.length < 3 ) {
            if (event.which === 13) {
                el.preventDefault();
                alert('Minimum 3 caractères.');
            }
        }
    })
</script>
    
